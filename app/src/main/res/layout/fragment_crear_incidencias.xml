<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.CrearIncidencias"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/titulo_incidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="top"
            android:textAlignment="center"
            android:text="Crear nueva incidencia"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dni_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:hint="DNI del usuario" />

        <EditText
            android:id="@+id/fecha_incidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:inputType="date"
            android:hint="Fecha  de la incidencia" />

        <EditText
            android:id="@+id/observaciones_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:hint="Observaciones del usuario" />

        <EditText
            android:id="@+id/dni_informatico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:hint="Nombre De Usuario" />


        <Spinner
            android:id="@+id/estado_incidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="top"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:spinnerMode="dropdown"/>

        <EditText
            android:id="@+id/fecha_resolucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:hint="Fecha resoluciÃ³n incidencia"
            android:inputType="date" />

        <EditText
            android:id="@+id/observaciones_informatico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:inputType="text"
            android:hint="Observaciones informatico" />

        <Button
            android:id="@+id/aniade_incidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Registrar incidencia" />


    </LinearLayout>
</ScrollView>